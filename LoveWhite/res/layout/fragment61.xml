<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="fill_parent"    android:layout_height="fill_parent"    android:background="@drawable/people_bkgd" >    <ScrollView        android:layout_width="fill_parent"        android:layout_height="fill_parent" >        <LinearLayout            android:layout_width="fill_parent"            android:layout_height="fill_parent"            android:orientation="vertical" >            <LinearLayout                android:id="@+id/mLLw2"                android:layout_width="fill_parent"                android:layout_height="150dp"                android:background="@drawable/people_elftalk"                android:orientation="horizontal" >                <View                    android:layout_width="0dp"                    android:layout_height="fill_parent"                    android:layout_weight="3" />                <LinearLayout                    android:layout_width="0dp"                    android:layout_height="fill_parent"                    android:layout_weight="6"                    android:orientation="vertical" >                    <View                        android:layout_width="fill_parent"                        android:layout_height="0dp"                        android:layout_weight="1" />                    <TextView                        android:id="@+id/mTv1"                        android:layout_width="fill_parent"                        android:layout_height="0dp"                        android:layout_weight="2"                        android:text="@string/ddd8"                        android:textColor="@color/black" />                    <View                        android:layout_width="fill_parent"                        android:layout_height="0dp"                        android:layout_weight="1" />                </LinearLayout>                <View                    android:layout_width="0dp"                    android:layout_height="fill_parent"                    android:layout_weight="1" />            </LinearLayout>            <com.ljppff.view.MyGridView                android:id="@+id/mLv1"                android:layout_width="fill_parent"                android:layout_height="fill_parent"                android:divider="#00000000"                android:horizontalSpacing="4dp"                android:numColumns="3"                android:verticalSpacing="5dp" >            </com.ljppff.view.MyGridView>        </LinearLayout>    </ScrollView>    <ProgressBar        android:id="@+id/mPb1"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_centerHorizontal="true"        android:layout_centerVertical="true"        android:visibility="gone" /></RelativeLayout>